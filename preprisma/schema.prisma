generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id            String @id  @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  password      String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // peludos       Peludo[]
  // cupones       Cupon[]
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

